// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  AGENT
}

enum ActivityType {
  CALL
  MEETING
  EMAIL
  NOTE
  OTHER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum EnrollmentStatus {
  PENDING
  ACTIVE
  INACTIVE
  CANCELLED
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  role           Role      @default(AGENT)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  contacts     Contact[]    @relation("AgentContacts")
  tasks        Task[]       @relation("AssignedTasks")
  activities   Activity[]
  timeEntries  TimeEntry[]
  auditLogs    AuditLog[]   @relation("AuditUser")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Contact {
  id                String   @id @default(cuid())
  firstName         String
  lastName          String
  email             String?
  phone             String?
  dateOfBirth       DateTime?
  address           String?
  city              String?
  state             String?
  zip               String?
  medicareNumberEnc String?   @db.Text
  ssnLast4          String?
  notes             String?   @db.Text
  agentId           String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  agent       User         @relation("AgentContacts", fields: [agentId], references: [id])
  tasks       Task[]
  activities  Activity[]
  enrollments Enrollment[]

  @@index([agentId])
  @@index([lastName])
  @@index([createdAt])
  @@map("contacts")
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  dueDate     DateTime
  status      TaskStatus @default(PENDING)
  contactId   String?
  assigneeId  String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  contact  Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)
  assignee User     @relation("AssignedTasks", fields: [assigneeId], references: [id])

  @@index([assigneeId])
  @@index([dueDate])
  @@index([status])
  @@map("tasks")
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType @default(CALL)
  summary     String
  notes       String?      @db.Text
  occurredAt  DateTime     @default(now())
  contactId   String
  userId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@index([contactId])
  @@index([userId])
  @@index([occurredAt])
  @@map("activities")
}

model Enrollment {
  id               String           @id @default(cuid())
  contactId        String
  planName         String
  planType         String?
  effectiveDate    DateTime
  premium          Decimal?         @db.Decimal(10, 2)
  status           EnrollmentStatus @default(PENDING)
  notes            String?          @db.Text
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
  @@index([effectiveDate])
  @@index([status])
  @@map("enrollments")
}

model TimeEntry {
  id            String    @id @default(cuid())
  userId        String
  clockIn       DateTime
  clockOut      DateTime?
  clockInGeo    Json?
  clockOutGeo   Json?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([clockIn])
  @@map("time_entries")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  action     String
  entity     String
  entityId   String
  oldValue   Json?
  newValue   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  user User @relation("AuditUser", fields: [userId], references: [id])

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
